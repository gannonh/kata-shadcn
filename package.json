{
  "name": "registry",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npx tsx scripts/build-registry.ts && next build",
    "start": "next start",
    "lint": "eslint .",
    "registry:build": "npx tsx scripts/build-registry.ts",
    "test": "node --test scripts/build-registry.test.mjs",
    "test:coverage": "COVERAGE_RUN=1 c8 npx tsx scripts/build-registry.ts && COVERAGE_RUN=1 node --test scripts/build-registry.test.mjs",
    "test:e2e": "playwright test",
    "generate-manifest": "npx tsx scripts/generate-manifest.ts"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "shadcn": "^3.0.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.6",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/postcss": "^4.2.1",
    "@types/node": "^20.19.9",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "c8": "^10.1.3",
    "eslint": "^9.32.0",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "c8": {
    "include": [
      "scripts/build-registry.ts"
    ],
    "exclude": [
      "**/*.test.*",
      "**/node_modules/**"
    ],
    "reporter": [
      "text",
      "lcov"
    ],
    "report-dir": "coverage",
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 70
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.2",
      "@types/react-dom": "19.1.2"
    }
  }
}
